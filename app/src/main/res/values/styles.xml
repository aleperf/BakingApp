<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="AppTheme">
        <item name="android:background">@color/cardColor2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cardTextViewColor</item>
    </style>

    <style name="CardViewTitle" parent="CardViewStyle">
        <item name="android:textSize">21sp</item>
    </style>

    <!--Ingredient RecyclerView -->
    <style name="IngredientListTitle" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/ingredientsColorText</item>
    </style>

    <style name="IngredientListItem" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ingredientsColorText</item>
    </style>

    <style name="IngredientListQuantity" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/ingredientsColorText</item>
    </style>

    <style name="IngredientExpansionHint" parent="IngredientListQuantity">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Steps RecyclerView -->
    <style name="StepNumeration" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@color/stepsTextViewColor</item>
    </style>

    <style name="StepTitle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/stepsTextViewColor</item>
    </style>

    <!--Step detail fragment -->
    <style name="StepDetailBase">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/stepsTextViewColor</item>
    </style>

    <style name="StepDetailTitle" parent="StepDetailBase">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StepDetailNumeration" parent="StepDetailBase">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="StepArrowNavigator" parent="StepDetailBase">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
